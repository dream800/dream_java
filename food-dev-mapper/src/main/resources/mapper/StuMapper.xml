<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.dream.mapper.StuMapper" >
  <resultMap id="BaseResultMap" type="com.dream.pojo.Stu" >
    <!--
      WARNING - @mbg.generated
    -->
    <id column="id" property="id" jdbcType="INTEGER" />
    <result column="name" property="name" jdbcType="VARCHAR" />
    <result column="age" property="age" jdbcType="INTEGER" />
  </resultMap>


  <select id="getStu" parameterType="int" resultMap="BaseResultMap">
    select * from stu where  id = #{id}
  </select>


  <update id="saveStud">
    INSERT INTO `stu` (`name`, `age`) VALUES (#{name}, #{age})
  </update>

  <update id="updateStu" parameterType="com.dream.pojo.Stu">
    update stu set name = #{name} where id = #{id}
  </update>

</mapper>